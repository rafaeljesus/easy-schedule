    "passport-jwt": "^1.2.1",
    "request": "^2.65.0"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.3",
    "babel-runtime": "^5.8.25",
    "chai": "^3.2.0",
    "co-mocha": "^1.1.2",
    "eslint": "^1.3.1",
    "mocha": "^2.2.5",
    "nock": "^2.15.0",
    "sinon": "^1.15.4",
    "sinon-chai": "^2.8.0",
    "supertest": "*"
  }
