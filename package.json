{
  "name": "easy-schedule",
  "version": "0.0.1",
  "description": "Simple and flexible job scheduling for your application",
  "engines": {
    "node": "4.0.0"
  },
  "scripts": {
    "start": "node bin/easy.schedule",
    "test": "npm run lint && npm run coverage",
    "lint": "eslint .",
    "watch:server": "nodemon -q -w api/ -x node --stage 0 -- bin/easy.schedule",
    "watch:test": "npm test -- -w",
    "posttest": "istanbul check-coverage --statements 90 --branches 60 --functions 90 --lines 90",
    "coverage": "NODE_ENV=test istanbul cover -x 'lib/** config/** middlewares/** app.js' --print both ./node_modules/mocha/bin/_mocha -- test --recursive",
    "codeclimate": "CODECLIMATE_REPO_TOKEN=0af717d08c45d155b504c197597bc7716bfc0d50f82548fafbcc2b43c1e codeclimate-test-reporter < coverage/lcov.info"
  },
  "dependencies": {
    "bunyan": "^1.4.0",
    "co": "^4.6.0",
    "co-body": "^3.0.0",
    "co-redis": "^1.2.1",
    "co-request": "^0.2.1",
    "cron": "^1.0.9",
    "debug": "^2.2.0",
    "hiredis": "^0.4.1",
    "kcors": "^1.0.1",
    "koa": "^0.21.0",
    "koa-better-ratelimit": "^2.1.2",
    "koa-body": "^1.2.1",
    "koa-compress": "^1.0.8",
    "koa-logger": "^1.3.0",
    "koa-mount": "^1.3.0",
    "koa-router": "^5.1.2",
    "lodash": "^3.10.0",
    "moment": "2.10.3",
    "node-schedule": "^0.2.9",
    "node-uuid": "^1.4.3",
    "redis": "^1.0.0",
    "request": "^2.60.0"
  },
  "devDependencies": {
    "chai": "^3.2.0",
    "co-mocha": "^1.1.2",
    "codeclimate-test-reporter": "^0.1.1",
    "eslint": "^1.3.1",
    "istanbul": "^0.3.19",
    "mocha": "^2.2.5",
    "nock": "^2.9.1",
    "nodemon": "^1.4.1",
    "sinon": "^1.15.4",
    "sinon-chai": "^2.8.0",
    "supertest": "*"
  },
  "keywords": [
    "Schedule",
    "Scheduler",
    "Job",
    "Jobs"
  ],
